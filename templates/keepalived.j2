global_defs {
  notification_email {
  }
  router_id LVS_DEVEL
  vrrp_skip_check_adv_addr
  vrrp_garp_interval 0
  vrrp_gna_interval 0
}

vrrp_script chk_haproxy {
  script "killall -0 haproxy"
  interval 2
  weight 2
}

vrrp_instance haproxy-vip {
  state BACKUP
  priority 100
  interface {{ ansible_facts.default_ipv4.interface }}
  virtual_router_id 60
  advert_int 1
  authentication {
    auth_type PASS
    auth_pass 1111
  }
  unicast_src_ip {{ ansible_facts.default_ipv4.address }}
  unicast_peer {
    {% if  inventory_hostname == groups.proxy_nodes[0].inventory_hostname %}
        {{ hostvars.groups.proxy_nodes[1].ansible_facts.default_ipv4.address }}
    {% elif inventory_hostname == groups.proxy_nodes[1].inventory_hostname %}
        {{ hostvars.groups.proxy_nodes[0].ansible_facts.default_ipv4.address }}
    {% endif %}
  }

  virtual_ipaddress {
    {{ virtual_ipaddress }}
  }

  track_script {
    chk_haproxy
  }
}